[user]
    email = fabienduhamel@users.noreply.github.com
    name  = fabienduhamel

[color]
    ui = true

[alias]
    st    = status
    ci    = commit
    co    = checkout
    oops  = commit --amend --no-edit
    br    = branch
    lbr   = branch -lvv
    lg    = log --graph --pretty=tformat:'%Cred%h%C(auto)%d%C(reset) %s %C(yellow)<%an, %ar>%Creset'
    ll    = log --pretty=format:'%C(red)%h%C(auto)%d %Creset%C(bold blue)%s %Creset%C(yellow)<%an, %ar>' --decorate --stat
    blist = "!r() { cur=$(git rev-parse --abbrev-ref HEAD); git for-each-ref --sort=-committerdate refs/heads/ --format='%(color:bold green)%(HEAD) %(color:bold white)%(refname:short)|%(color:bold yellow)[%(upstream:short)]|%(color:reset)%(color:red)%(objectname:short) %(color:bold blue)%(subject) %(color:reset)%(color:yellow)<%(authorname), %(authordate:relative)>%(color:reset)' | column -ts'|'; }; r"
    rbr          = branch -r
    brd          = branch -d
    brpurge      = "!git fetch --prune && git branch -vv | grep -E \": disparue|: gone\" | sed 's/^.\\{2\\}//g' | cut -d' ' -f1 | xargs -n 1 git branch -d"
    brpurgef     = "!git fetch --prune && git branch -vv | grep -E \": disparue|: gone\" | sed 's/^.\\{2\\}//g' | cut -d' ' -f1 | xargs -n 1 git branch -D"
    wdiff        = diff --word-diff
    cdiff        = diff --cached
    ndiff        = diff --name-only
    pushu        = push -u origin HEAD
    assume       = update-index --assume-unchanged
    unassume     = update-index --no-assume-unchanged
    assumed      = "!git ls-files -v | grep ^h | cut -c 3-"
#    unassumeall  = "!git assumed | xargs git update-index --no-assume-unchanged"
#    assumeall    = "!git st -s | awk {'print $2'} | xargs git assume"
    fl           = log -u
    la           = "!git config -l | grep alias | cut -c 7-"
    up           = !git fetch && git rebase --autostash FETCH_HEAD

[core]
    editor       = vim
    whitespace   = -trailing-space
    excludesfile = ~/.gitignore_global
    pager        = diff-so-fancy | less --tabs=1,5 -R

[diff]
    mnemonicPrefix = true
    renames        = true
    wordRegex      = .

[push]
    default = simple
